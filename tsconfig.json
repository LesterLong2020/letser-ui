{
  "compilerOptions": {
    "outDir": "./lib",
    "noImplicitAny": true,
    "module": "esnext",
    "target": "es5",
    "jsx": "react",
    "allowJs": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "declaration": true,
    "baseUrl": "./",
    "paths": {
      "src": ["src"],
      "@": ["src"]
    }
  },
  "include": ["src/components", "typings"],
  "exclude": ["node_modules", "config/"]
}

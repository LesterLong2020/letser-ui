{
  "name": "lester-ui",
  "version": "1.1.1",
  "description": "lester's ui component library",
  "main": "lib/index.js",
  "types": "lib/index.d.ts",
  "files": [
    "lib"
  ],
  "scripts": {
    "start": "cross-env NODE_ENV=development webpack serve --no-static --config  config/start.js",
    "build": "cross-env NODE_ENV=production webpack --config config/build.js",
    "test": "echo \"Error: no test specified\" && exit 1",
    "lint": "eslint --fix --ext .js,.jsx,.ts,.tsx src/ components/",
    "release": "webpack --config config/publish.js",
    "rollup-build": "rollup --config config/rollup.config.js"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "**/*.{js.jsx,ts,tsx,json,html,less,css,md}": [
      "prettier --write",
      "git add"
    ],
    "**/*.{js.jsx,ts,tsx}": "npm run lint"
  },
  "keywords": [
    "lester"
  ],
  "author": "lester",
  "license": "ISC",
  "dependencies": {
    "axios": "^0.24.0",
    "classnames": "^2.3.1",
    "fastclick": "^1.0.6",
    "lester-tools": "^1.1.1",
    "react-router-dom": "^6.2.1"
  },
  "peerDependencies": {
    "react": "^17.0.2",
    "react-dom": "^17.0.2"
  },
  "devDependencies": {
    "@babel/cli": "^7.16.7",
    "@babel/core": "^7.16.7",
    "@babel/preset-env": "^7.16.7",
    "@babel/preset-react": "^7.16.7",
    "@babel/preset-typescript": "^7.16.7",
    "@purtuga/esm-webpack-plugin": "^1.5.0",
    "@rollup/plugin-babel": "^5.3.0",
    "@rollup/plugin-commonjs": "^21.0.1",
    "@rollup/plugin-image": "^2.1.1",
    "@rollup/plugin-json": "^4.1.0",
    "@rollup/plugin-node-resolve": "^13.1.3",
    "@types/fastclick": "^1.0.30",
    "@types/react-dom": "^17.0.11",
    "@typescript-eslint/eslint-plugin": "^5.9.0",
    "@typescript-eslint/parser": "^5.9.0",
    "babel-loader": "^8.2.3",
    "cache-loader": "^4.1.0",
    "clean-webpack-plugin": "^4.0.0",
    "cross-env": "^7.0.3",
    "css-loader": "^6.5.1",
    "del": "^6.0.0",
    "eslint": "^7.26.0",
    "eslint-config-standard": "^16.0.3",
    "eslint-loader": "^4.0.2",
    "eslint-plugin-import": "^2.25.4",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-prettier": "^4.0.0",
    "eslint-plugin-promise": "^6.0.0",
    "eslint-plugin-react": "^7.28.0",
    "file-loader": "^6.2.0",
    "html-webpack-plugin": "^5.5.0",
    "less": "^4.1.2",
    "less-loader": "^10.2.0",
    "mini-css-extract-plugin": "^2.4.5",
    "optimize-css-assets-webpack-plugin": "^6.0.1",
    "postcss-loader": "^6.2.1",
    "prettier": "^2.5.1",
    "rollup-plugin-dts": "^4.1.0",
    "rollup-plugin-import-css": "^3.0.2",
    "rollup-plugin-postcss-modules": "^2.0.2",
    "rollup-plugin-terser": "^7.0.2",
    "rollup-plugin-typescript2": "^0.31.1",
    "simple-progress-webpack-plugin": "^2.0.0",
    "style-loader": "^3.3.1",
